---
import { payloadFetch } from '../lib/payload.client';

interface Props {
  limit?: number;
  language?: string;
}

const { limit = 12, language = 'en' } = Astro.props;

// Fetch articles from PayloadCMS
let articles = [];
try {
  const response = await payloadFetch({
    collection: 'articles',
    endpoint: `/collections/articles?limit=${limit}&depth=2`
  });
  
  articles = response?.docs || [];
  
  // Filter by language if specified
  if (language) {
    articles = articles.filter((a: any) => a.language === language);
  }
} catch (error) {
  console.error('Error fetching articles:', error);
}
---

<div class="articles-grid">
  {articles.length === 0 ? (
    <p class="no-articles">No articles found</p>
  ) : (
    articles.map((article: any) => (
      <article class="article-card">
        {(article.featured_img_url || article.featureImage || article.featured_image_url) && (
          <div class="article-image">
            <img 
              src={article.featured_img_url || article.featureImage || article.featured_image_url} 
              alt={article.featured_image_alt || article.title}
              loading="lazy"
            />
          </div>
        )}
        
        <div class="article-content">
          <h3 class="article-title">
            <a href={`/articles/${article.slug}`}>
              {article.title}
            </a>
          </h3>
          
          <p class="article-excerpt">
            {article.excerpt || article.content?.substring(0, 150)}
          </p>
          
          <div class="article-meta">
            <span class="article-author">By {article.author}</span>
            <span class="article-date">
              {new Date(article.date).toLocaleDateString()}
            </span>
            <span class="article-lang" data-lang={article.language}>
              {article.language.toUpperCase()}
            </span>
          </div>
          
          <a href={`/articles/${article.slug}`} class="read-more">
            Read More â†’
          </a>
        </div>
      </article>
    ))
  )}
</div>

<style>
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 2rem 0;
  }
  
  .article-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }
  
  .article-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: #f0f0f0;
  }
  
  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .article-content {
    padding: 1.5rem;
  }
  
  .article-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    line-height: 1.4;
  }
  
  .article-title a {
    color: #333;
    text-decoration: none;
  }
  
  .article-title a:hover {
    color: #0066cc;
  }
  
  .article-excerpt {
    color: #666;
    margin: 1rem 0;
    line-height: 1.6;
  }
  
  .article-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: #999;
    margin: 1rem 0;
    flex-wrap: wrap;
  }
  
  .article-lang {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background: #f0f0f0;
    border-radius: 4px;
    font-weight: 600;
  }
  
  .read-more {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
  }
  
  .read-more:hover {
    color: #0052a3;
  }
  
  .no-articles {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    color: #999;
  }
</style>
