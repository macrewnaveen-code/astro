import GlobalSidebar from '../components/GlobalSidebar.astro';
import GlobalAbout from '../components/GlobalAbout.astro';
import GlobalFooter from '../components/GlobalFooter.astro';
import { payloadFetch } from '../lib/payload.client';
import { getAllArticlesFromMongo, getArticleBySlugFromMongo, getCommentsByArticleIdFromMongo } from '../lib/mongo.server';
import { decodeHtmlEntities as decodeEntities } from '../utils/decodeHtmlEntities';
import { buildArticleJsonLd, buildBreadcrumbJsonLd } from '../utils/buildArticleJsonLd';
import { processArticleImageUrl } from '../utils/cdnUrlReplacer';

// Enable ISR - pre-generate popular articles, others on-demand
export const prerender = true;

export async function getStaticPaths() {
  console.log('ðŸš€ [ISR BUILD] Starting static path generation for popular articles...');

  let articles = await getAllArticlesFromMongo();

  // For ISR: Only pre-generate the first 100 most popular articles
  // Remaining articles will be generated on-demand
  const maxStaticArticles = 100;

  if (articles.length > maxStaticArticles) {
    console.log(`ðŸ“Š [ISR BUILD] Limiting to ${maxStaticArticles} pre-generated articles (from ${articles.length} total)`);
    console.log('ðŸ“Š [ISR BUILD] Remaining articles will be generated on-demand via ISR');
    articles = articles.slice(0, maxStaticArticles);
  }

  if (!articles || articles.length === 0) {
    console.log('âš ï¸ [ISR BUILD] No articles found in MongoDB');
    return [];
  }

  console.log(`âœ… [ISR BUILD] Pre-generating ${articles.length} articles at build time`);

  return articles.map((article: any) => ({
    params: { slug: article.slug },
    props: { article }
  }));
}

interface Props {
  article?: any; // Optional for ISR - may not be pre-generated
}

const { article: preGeneratedArticle } = Astro.props;
const { slug } = Astro.params;

// For ISR: If article wasn't pre-generated, fetch it on-demand
let article = preGeneratedArticle;
if (!article && slug) {
  console.log(`ðŸ”„ [ISR] Generating article on-demand: ${slug}`);
  try {
    article = await getArticleBySlugFromMongo(slug);
    if (!article) {
      return new Response('Article not found', { status: 404 });
    }
  } catch (error) {
    console.error(`âŒ [ISR] Error fetching article ${slug}:`, error);
    return new Response('Error loading article', { status: 500 });
  }
}

if (!article) {
  return new Response('Article not found', { status: 404 });
}

// For SSG, we can't fetch comments at build time as they change frequently
// Comments will be loaded client-side using SaaS solution (Giscus/Disqus)
// TODO: Replace Payload comments with client-side SaaS comments
const comments = [];

// For ISR: Fetch related articles on-demand (not at build time)
let relatedArticles: any[] = [];
if (article && article.categories && article.categories.length > 0) {
  try {
    // For ISR, we fetch related articles on-demand
    relatedArticles = await getRelatedArticlesFromMongo(
      article.categories.map((cat: any) => cat._id || cat),
      article._id,
      3
    );
  } catch (error) {
    console.error('Error fetching related articles:', error);
    relatedArticles = [];
  }
}

// Helper: Extract title
const getTitle = () => {
  if (!article) return 'Untitled';
  return article.title || 'Untitled';
};

// Helper: Extract content
const getContent = () => {
  if (!article) return '';
  if (typeof article.content === 'string') {
    return article.content;
  }
  if (Array.isArray(article.content)) {
    return article.content.map((block: any) => {
      if (block._type === 'block' || typeof block === 'object') {
        return block.children?.map((child: any) => child.text).join('') || '';
      }
      return '';
    }).join('\n');
  }
  return '';
};

// Helper: Extract excerpt
const getExcerpt = () => {
  if (!article) return '';
  if (typeof article.excerpt === 'string') {
    return article.excerpt.substring(0, 160);
  }
  if (Array.isArray(article.excerpt)) {
    return article.excerpt.map((block: any) => 
      block.children?.map((child: any) => child.text).join(' ') || ''
    ).join(' ').substring(0, 160);
  }
  return '';
};

// Helper: Extract image
const getImage = () => {
  if (!article) return '';
  // Prioritize featured_img_url from import
  if (article.featured_img_url) {
    return article.featured_img_url;
  }
  if (article.featured_image?.url) {
    return article.featured_image.url;
  }
  return article.featuredImageUrl || '';
};

// Helper: Extract image alt text
const getImageAlt = () => {
  if (!article) return '';
  if (article.featured_image?.alt) {
    return article.featured_image.alt;
  }
  return 'Article featured image';
};

// Helper: Decode HTML entities
const decodeHtmlEntities = (text: string): string => {
  if (!text) return '';
  
  let decoded = text;
  
  // Handle common HTML entities
  const entityMap: Record<string, string> = {
    '&nbsp;': ' ',
    '&quot;': '"',
    '&amp;': '&',
    '&lt;': '<',
    '&gt;': '>',
    '&apos;': "'",
    '&#039;': "'",
    '&rsquo;': "'",
    '&lsquo;': "'",
    '&rdquo;': '"',
    '&ldquo;': '"',
    '&ndash;': 'â€“',
    '&mdash;': 'â€”',
    '&hellip;': 'â€¦',
    '&copy;': 'Â©',
    '&reg;': 'Â®',
    '&deg;': 'Â°',
  };
  
  for (const [ent, char] of Object.entries(entityMap)) {
    decoded = decoded.split(ent).join(char);
  }

  return decoded;
};

// Prepare final values
const title = getTitle();
const content = getContent();
const excerpt = getExcerpt();
const image = getImage();
const imageAlt = getImageAlt();

if (!article) {
  return new Response('Article not found', { status: 404 });
}

// Build JSON-LD schemas
const articleJsonLd = buildArticleJsonLd(article, 'https://lacuisinedebernard.com');
const breadcrumbJsonLd = buildBreadcrumbJsonLd(article.title, 'https://lacuisinedebernard.com');

// Format date
const date = article.date ? new Date(article.date).toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
}) : '';

// Prepare SEO data
const keywords = article.tags?.map((t: any) => t.title).join(', ') || title;
const publishDate = article.date || new Date().toISOString();
const modifiedDate = article.updated || publishDate;
const author = article.author?.name || 'La Cuisine De Bernard';
