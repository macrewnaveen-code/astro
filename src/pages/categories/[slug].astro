---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { payloadFetch } from '../../lib/payload.client';
import { processArticleImageUrl } from '../../utils/cdnUrlReplacer';

export const prerender = true;

export async function getStaticPaths() {
  // Fetch all categories from Payload
  const result = await payloadFetch({
    endpoint: '/collections/categories?limit=1000',
    method: 'GET'
  });
  
  const categories = result?.docs || [];

  return categories.map((cat: any) => ({
    params: { slug: cat.slug },
  }));
}

const { slug } = Astro.params;

// Fetch the category from Payload
const categoryResult = await payloadFetch({
  endpoint: `/collections/categories?where[slug][equals]=${slug}&limit=1`,
  method: 'GET'
});

const category = categoryResult?.docs?.[0];

if (!category) {
  return new Response('Category not found', { status: 404 });
}

// Fetch all articles in this category
const allArticlesInCategory = await payloadFetch({
  endpoint: `/collections/articles?where[categories.slug][equals]=${slug}&depth=2&limit=1000`,
  method: 'GET'
});

const articles = allArticlesInCategory?.docs || [];

// Helper functions
function decodeHtmlEntities(text: string): string {
  const entities: { [key: string]: string } = {
    '&nbsp;': ' ',
    '&amp;': '&',
    '&lt;': '<',
    '&gt;': '>',
    '&quot;': '"',
    '&#39;': "'",
    '&hellip;': '‚Ä¶',
    '&mdash;': '‚Äî',
    '&ndash;': '‚Äì',
    '&lsquo;': "'",
    '&rsquo;': "'",
    '&ldquo;': '"',
    '&rdquo;': '"',
    '&bull;': '‚Ä¢',
    '&deg;': '¬∞',
    '&frac12;': '¬Ω',
    '&frac14;': '¬º',
    '&frac34;': '¬æ',
  };

  return text.replace(/&[a-zA-Z0-9#]+;/g, (entity) => {
    return entities[entity] || entity;
  });
}

function stripHtml(html: string): string {
  if (!html) return '';
  const text = html.replace(/<[^>]*>/g, '');
  const decodedText = decodeHtmlEntities(text);
  return decodedText.substring(0, 150) + (decodedText.length > 150 ? '...' : '');
}

function getExcerpt(article: any): string {
  // Try excerpt first
  if (article.excerpt && Array.isArray(article.excerpt)) {
    const excerptText = article.excerpt
      .map((block: any) => block.children?.map((child: any) => child.text).join('') || '')
      .join('')
      .trim();
    if (excerptText) return excerptText.substring(0, 150) + '...';
  }
  
  // Fallback to content
  if (article.content && Array.isArray(article.content)) {
    const contentText = article.content
      .map((block: any) => {
        if (block._type === 'block') {
          return block.children?.map((child: any) => child.text).join('') || '';
        }
        return '';
      })
      .join('')
      .trim();
    if (contentText) return contentText.substring(0, 150) + '...';
  }
  
  return '';
}

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

---

<BaseLayout title={category.title} description={category.description || `Articles in ${category.title}`}>
  <main class="min-h-screen bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900">
    {/* Hero Section */}
    <div class="relative overflow-hidden bg-gradient-to-br from-blue-600 via-cyan-600 to-cyan-700 pt-24 pb-32">
      {/* Animated Background Elements */}
      <div class="absolute inset-0 opacity-10">
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-white rounded-full blur-3xl"></div>
        <div class="absolute -bottom-32 -left-32 w-96 h-96 bg-white rounded-full blur-3xl"></div>
      </div>

      <div class="relative z-10 container mx-auto px-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="text-6xl">üìÅ</div>
          <div>
            <div class="inline-block mb-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-bold">
              Category
            </div>
            <h1 class="text-5xl md:text-7xl font-black text-white leading-tight">
              {category.title}
            </h1>
          </div>
        </div>
        
        <div class="flex flex-wrap items-center gap-6 mt-8">
          <div class="bg-white/10 backdrop-blur-md rounded-xl px-6 py-4 border border-white/20">
            <div class="text-3xl font-black text-white">{allArticlesInCategory.length}</div>
            <div class="text-sm text-white/80">article{allArticlesInCategory.length !== 1 ? 's' : ''}</div>
          </div>
          <div class="text-white/80 text-lg">
            Discover amazing content in this category
          </div>
        </div>
      </div>
    </div>

    <div class="relative container mx-auto px-4 -mt-16 pb-20 z-20">
      {allArticlesInCategory.length > 0 ? (
        <>
          {/* Filter Info */}
          <div class="mb-8 flex items-center justify-between px-6 py-4 bg-gradient-to-r from-gray-800 to-gray-900 rounded-xl border border-gray-700">
            <div class="text-white">
              <span class="font-bold text-lg">{allArticlesInCategory.length}</span>
              <span class="text-gray-400 ml-2">articles found</span>
            </div>
            <div class="text-sm text-gray-400">
              Sorted by newest first
            </div>
          </div>

          {/* Articles Grid */}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
            {articles.map((article: any) => (
              <a href={`/${article.slug.current}`} class="group h-full">
                <div class="bg-gradient-to-b from-gray-800 to-gray-900 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-3 h-full flex flex-col border border-gray-700 hover:border-gray-600">
                  {/* Image Container */}
                  {(() => {
                    const imageUrl = processArticleImageUrl(article);
                    const imageAlt = article.featured_image?.alt || article.title;
                    return imageUrl && (
                      <div class="relative w-full h-64 overflow-hidden bg-gradient-to-br from-gray-700 to-gray-800">
                        <img
                          src={imageUrl}
                          alt={imageAlt}
                          class="w-full h-full object-cover group-hover:scale-110 transition duration-300"
                          loading="lazy"
                        />
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300"></div>
                        <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-black/80 to-transparent"></div>
                      </div>
                    );
                  })()}

                  {/* Content */}
                  <div class="p-6 flex-grow flex flex-col">
                    {/* Categories */}
                    {article.categories && article.categories.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-4">
                        {article.categories.slice(0, 2).map((cat: any) => (
                          <a href={`/categories/${cat.slug.current}`} class="text-xs bg-blue-600/30 hover:bg-blue-600/50 text-blue-200 px-2 py-1 rounded-full transition">
                            {cat.title}
                          </a>
                        ))}
                      </div>
                    )}

                    {/* Date */}
                    {article.date && (
                      <time class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">
                        {formatDate(article.date)}
                      </time>
                    )}

                    {/* Title */}
                    <h3 class="font-black text-xl mb-3 group-hover:text-blue-400 transition line-clamp-2 text-white">
                      {article.title}
                    </h3>

                    {/* Excerpt */}
                    <p class="text-gray-400 text-sm mb-4 line-clamp-3 flex-grow">
                      {getExcerpt(article) || 'No description available'}
                    </p>

                    {/* Author and Tags */}
                    <div class="pt-4 border-t border-gray-700 space-y-3">
                      {article.author && (
                        <div class="text-xs text-gray-300">
                          By <span class="font-bold text-white">{article.author.name}</span>
                        </div>
                      )}
                      
                      {/* Tags */}
                      {article.tags && article.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2">
                          {article.tags.slice(0, 3).map((tag: any) => (
                            <span class="text-xs bg-gray-700 hover:bg-gray-600 text-gray-200 px-2 py-1 rounded-full transition">
                              #{tag.title}
                            </span>
                          ))}
                          {article.tags.length > 3 && (
                            <span class="text-xs text-gray-500">
                              +{article.tags.length - 3}
                            </span>
                          )}
                        </div>
                      )}
                    </div>

                    {/* Read More Button */}
                    <div class="mt-auto pt-4">
                      <div class="inline-flex items-center gap-2 text-blue-400 font-bold text-sm group-hover:text-blue-300 transition">
                        Read Article 
                        <span class="group-hover:translate-x-2 transition transform">‚Üí</span>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>

          {/* Show All Info */}
          <div class="text-center py-8 border-t border-gray-700">
            <p class="text-gray-400 text-sm">
              Showing all {allArticlesInCategory.length} articles in <span class="font-bold text-white">{category.title}</span>
            </p>
          </div>
        </>
      ) : (
        <div class="text-center py-32">
          <div class="text-8xl mb-6">üîç</div>
          <h3 class="text-3xl font-bold text-white mb-3">No articles yet</h3>
          <p class="text-gray-400 text-lg max-w-md mx-auto">
            There are no articles in the {category.title} category yet. Check back soon for new content!
          </p>
        </div>
      )}

      {/* Related Categories */}
      <section class="mt-20 pt-12 border-t border-gray-700">
        <h3 class="text-3xl font-black text-white mb-6">Explore More Categories</h3>
        <p class="text-gray-400 text-lg">
          <a href="/categories" class="text-blue-400 hover:text-blue-300 font-bold transition">
            View all {allArticlesInCategory.length > 0 ? 'other ' : ''}categories ‚Üí
          </a>
        </p>
      </section>
    </div>
  </main>

  <style>
    :global(body) {
      overflow-x: hidden;
    }
  </style>
</BaseLayout>
