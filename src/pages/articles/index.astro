---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { payloadFetch } from "../../lib/payload.client";

const lang = 'en';
const currentPage = 1;
const articlesPerPage = 12;

// Fetch all articles from Payload
const allArticles = await payloadFetch({
  endpoint: '/collections/articles?depth=2&limit=1000',
  method: 'GET'
});

// Filter articles
const articles = (Array.isArray(allArticles?.docs) ? allArticles.docs : []).filter((a: any) => a && a.title);

console.log('üîç Payload Articles Fetched:', allArticles);
console.log('‚úÖ Filtered articles:', articles.length);

// Calculate pagination
const totalPages = Math.ceil(articles.length / articlesPerPage);
const startIdx = (currentPage - 1) * articlesPerPage;
const endIdx = startIdx + articlesPerPage;
const paginatedArticles = articles.slice(startIdx, endIdx);

// Helper functions
const stripHtml = (html: string) => {
  if (!html) return '';
  const text = html.replace(/<[^>]*>/g, '');
  return text.substring(0, 150) + (text.length > 150 ? '...' : '');
};

const getExcerpt = (article: any) => {
  if (article.content && Array.isArray(article.content)) {
    const text = article.content.map((block: any) => 
      block.children?.map((child: any) => child.text).join(' ') || ''
    ).join(' ');
    return stripHtml(text).substring(0, 300) + '...';
  }
  if (article.excerpt && Array.isArray(article.excerpt)) {
    const text = article.excerpt.map((block: any) => 
      block.children?.map((child: any) => child.text).join(' ') || ''
    ).join(' ');
    return stripHtml(text).substring(0, 300) + '...';
  }
  return '';
};

// Get full content as HTML
const getFullContent = (article: any) => {
  if (article.content && Array.isArray(article.content)) {
    return article.content.map((block: any) => {
      if (block._type === 'block') {
        const text = block.children?.map((child: any) => child.text).join('') || '';
        return `<p class="text-gray-700 dark:text-gray-300 mb-4">${text}</p>`;
      }
      return '';
    }).join('');
  }
  return '';
};

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};
---

<BaseLayout title="Articles">
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Header -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Articles
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Discover {articles.length} articles
        </p>
      </div>

      <!-- Articles Grid -->
      {paginatedArticles.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {paginatedArticles.map((article: any) => (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-lg transition-shadow overflow-hidden">
              {/* Featured Image */}
              {article.featuredImageUrl && (
                <div class="aspect-video overflow-hidden bg-gray-200 dark:bg-gray-700">
                  <img 
                    src={article.featuredImageUrl} 
                    alt={article.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform"
                  />
                </div>
              )}
              
              {/* Content */}
              <div class="p-6">
                {/* Categories */}
                {article.categories && article.categories.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-2">
                    {article.categories.map((cat: any) => (
                      <a 
                        href={`/categories/${cat.slug?.current}`}
                        class="inline-block px-2 py-1 text-xs font-semibold text-blue-600 dark:text-blue-400 bg-blue-100 dark:bg-blue-900 rounded"
                      >
                        {cat.title}
                      </a>
                    ))}
                  </div>
                )}

                {/* Title */}
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
                  <a href={`/articles/${article.slug?.current}`} class="hover:text-blue-600 dark:hover:text-blue-400">
                    {article.title}
                  </a>
                </h2>

                {/* Content */}
                <div class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                  {article.content && Array.isArray(article.content) ? (
                    <div set:html={getFullContent(article)} />
                  ) : (
                    <p class="line-clamp-3">{getExcerpt(article)}</p>
                  )}
                </div>

                {/* Meta */}
                <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-500">
                  <span>{formatDate(article.date)}</span>
                  {article.author && (
                    <span>{article.author.name}</span>
                  )}
                </div>

                {/* Tags */}
                {article.tags && article.tags.length > 0 && (
                  <div class="mt-4 flex flex-wrap gap-1">
                    {article.tags.slice(0, 3).map((tag: any) => (
                      <a 
                        href={`/tags/${tag.slug?.current}`}
                        class="text-xs text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300"
                      >
                        #{tag.title}
                      </a>
                    ))}
                    {article.tags.length > 3 && (
                      <span class="text-xs text-gray-500">+{article.tags.length - 3}</span>
                    )}
                  </div>
                )}

                {/* Read More */}
                <a 
                  href={`/articles/${article.slug?.current}`}
                  class="inline-block mt-4 text-blue-600 dark:text-blue-400 hover:underline font-semibold"
                >
                  Read More ‚Üí
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-600 dark:text-gray-400 text-lg">No articles found</p>
        </div>
      )}

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="flex flex-wrap justify-center items-center gap-2 mt-12">
          {currentPage > 1 && (
            <a 
              href={currentPage === 2 ? '/articles' : `/articles/page/${currentPage - 1}`}
              class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700 transition"
            >
              ‚Üê Previous
            </a>
          )}
          
          <div class="flex flex-wrap gap-1 justify-center">
            {Array.from({ length: totalPages }, (_, i) => {
              const pageNum = i + 1;
              return (
                <a 
                  href={pageNum === 1 ? '/articles' : `/articles/page/${pageNum}`}
                  class={`px-3 py-2 rounded transition ${
                    pageNum === currentPage
                      ? 'bg-blue-600 text-white font-bold'
                      : 'bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-300 dark:hover:bg-gray-600'
                  }`}
                  title={`Go to page ${pageNum}`}
                >
                  {pageNum}
                </a>
              );
            })}
          </div>

          {currentPage < totalPages && (
            <a 
              href={`/articles/page/${currentPage + 1}`}
              class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700 transition"
            >
              Next ‚Üí
            </a>
          )}
        </div>
      )}

      {/* Stats */}
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <p class="text-center text-gray-600 dark:text-gray-400">
          Showing {startIdx + 1}-{Math.min(endIdx, articles.length)} of {articles.length} articles
          {totalPages > 1 && ` (Page {currentPage} of {totalPages})`}
        </p>
      </div>
    </div>
  </main>
</BaseLayout>
