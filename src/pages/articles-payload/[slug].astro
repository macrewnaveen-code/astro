---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { payloadFetch } from '../../lib/payload.client';

export const prerender = true;

export async function getStaticPaths() {
  try {
    const response = await payloadFetch({
      collection: 'articles',
      endpoint: '/collections/articles?limit=7000'
    });
    
    const articles = response?.docs || [];
    
    return articles.map((article: any) => ({
      params: { slug: article.slug },
      props: { article }
    }));
  } catch (error) {
    console.error('Error fetching articles for static paths:', error);
    return [];
  }
}

interface Props {
  article: {
    _id?: string;
    title: string;
    slug: string;
    excerpt?: string;
    content: string;
    date?: string;
    language?: string;
    featured_image_url?: string;
    featured_image_alt?: string;
    author?: string;
    source_url?: string;
  };
}

const { article } = Astro.props;

if (!article) {
  return Astro.redirect('/articles');
}
---

<BaseLayout title={article.title} description={article.excerpt}>
  <main class="article-page">
    <article class="article-content">
      {/* Article Header */}
      <header class="article-header">
        <h1>{article.title}</h1>
        
        <div class="article-meta">
          {article.author && <span class="author">By {article.author}</span>}
          {article.date && (
            <span class="date">
              {new Date(article.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </span>
          )}
          {article.language && (
            <span class="language">{article.language.toUpperCase()}</span>
          )}
        </div>
      </header>

      {/* Featured Image */}
      {article.featured_image_url && (
        <figure class="featured-image">
          <img 
            src={article.featured_image_url} 
            alt={article.featured_image_alt || article.title}
            loading="eager"
          />
          {article.featured_image_alt && (
            <figcaption>{article.featured_image_alt}</figcaption>
          )}
        </figure>
      )}

      {/* Excerpt */}
      {article.excerpt && (
        <div class="excerpt">
          <p>{article.excerpt}</p>
        </div>
      )}

      {/* Article Body */}
      <div class="article-body">
        {article.content ? (
          <div set:html={article.content} />
        ) : (
          <p>No content available</p>
        )}
      </div>

      {/* Source Link */}
      {article.source_url && (
        <footer class="article-footer">
          <p>
            Original article: <a href={article.source_url} target="_blank" rel="noopener noreferrer">
              View on source
            </a>
          </p>
        </footer>
      )}
    </article>

    {/* Sidebar */}
    <aside class="article-sidebar">
      <div class="sidebar-card">
        <h3>Article Info</h3>
        <dl>
          {article.language && (
            <>
              <dt>Language</dt>
              <dd>{article.language}</dd>
            </>
          )}
          {article.author && (
            <>
              <dt>Author</dt>
              <dd>{article.author}</dd>
            </>
          )}
          {article.date && (
            <>
              <dt>Published</dt>
              <dd>{new Date(article.date).toLocaleDateString()}</dd>
            </>
          )}
        </dl>
      </div>

      <div class="sidebar-card">
        <h3>Related Articles</h3>
        <p>Related articles coming soon...</p>
      </div>
    </aside>
  </main>
</BaseLayout>

<style>
  main.article-page {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 2rem;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  article.article-content {
    background: white;
    padding: 2rem;
    border-radius: 8px;
  }

  .article-header {
    margin-bottom: 2rem;
    border-bottom: 2px solid #f0f0f0;
    padding-bottom: 1rem;
  }

  .article-header h1 {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    line-height: 1.2;
    color: #333;
  }

  .article-meta {
    display: flex;
    gap: 2rem;
    font-size: 0.9rem;
    color: #666;
    flex-wrap: wrap;
  }

  .article-meta span {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .featured-image {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .featured-image figcaption {
    padding: 1rem;
    background: #f5f5f5;
    font-size: 0.875rem;
    color: #666;
    text-align: center;
  }

  .excerpt {
    background: #f9f9f9;
    padding: 1.5rem;
    border-left: 4px solid #0066cc;
    margin: 2rem 0;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #333;
  }

  .article-body {
    line-height: 1.8;
    color: #333;
  }

  .article-body :global(p) {
    margin: 1rem 0;
  }

  .article-body :global(h2) {
    margin: 2rem 0 1rem 0;
    font-size: 1.8rem;
    color: #333;
  }

  .article-body :global(h3) {
    margin: 1.5rem 0 0.75rem 0;
    font-size: 1.3rem;
    color: #333;
  }

  .article-body :global(ul),
  .article-body :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .article-body :global(img) {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
    border-radius: 4px;
  }

  .article-footer {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid #f0f0f0;
    font-size: 0.9rem;
    color: #666;
  }

  .article-footer a {
    color: #0066cc;
    text-decoration: none;
  }

  .article-footer a:hover {
    text-decoration: underline;
  }

  aside.article-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .sidebar-card {
    background: #f9f9f9;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }

  .sidebar-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: #333;
  }

  .sidebar-card dl {
    margin: 0;
  }

  .sidebar-card dt {
    font-weight: 600;
    color: #666;
    margin-top: 0.75rem;
  }

  .sidebar-card dt:first-child {
    margin-top: 0;
  }

  .sidebar-card dd {
    margin: 0.25rem 0 0 0;
    color: #333;
  }

  @media (max-width: 768px) {
    main.article-page {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1rem;
    }

    .article-header h1 {
      font-size: 1.8rem;
    }

    .article-meta {
      gap: 1rem;
    }
  }
</style>
